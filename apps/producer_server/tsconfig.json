{
    "extends": "tsconfig/api.json",
    "compilerOptions": {
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "./src/**/*.test.ts"]
}
